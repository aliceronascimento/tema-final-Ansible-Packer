{
	"builders":[
		{
		"type": "docker",
		"image": "ubuntu:19.10",
		"commit": true,
		"changes": [
			"EXPOSE 8083",
			"ENTRYPOINT [\"java\", \"-jar\", \"calculator.jar\"]" ]
		}
	],

	"provisioners":[
		{
			"type": "shell",
			"inline": [
				"apt-get update", "apt-get install python3 python3-pip python3-apt -yq ", "pip3 install ansible" ]
		},
		{
			"type": "ansible-local",
			"playbook_file": "playbook.yml"
		},
		{
			"type": "file",
			"source": "calculator.jar",
			"destination": "/calculator.jar"
		}	
	],
	"post-processors":[
		[
			{
				"type": "docker-tag",
				"repository": "alicenascimento/tema-final-Ansible-Packer",
				"tag": "latest"
			},
			"docker-push"
		]
	]
}
